<div class="row">
    <div class="col-md-6">
        <form method="POST" class="p-3 border rounded mb-4">
            <h5>Create Single Tag</h5>
            <div class="mb-3">
                <label for="tagname" class="form-label">Tag Name</label>
                <input type="text" class="form-control" id="tagname" name="tagname" required>
            </div>
            <div class="mb-3">
                <label for="tagdesc" class="form-label">Description (optional)</label>
                <textarea class="form-control" id="tagdesc" name="tagdesc" rows="2"></textarea>
            </div>
            <button type="submit" class="btn btn-success">Create Tag</button>
        </form>
    </div>
    
    <div class="col-md-6">
        <form method="POST" enctype="multipart/form-data" class="p-3 border rounded mb-4">
            <h5>Upload Tag File</h5>
            <div class="mb-3">
                <label for="tagfile" class="form-label">CSV File</label>
                <input type="file" class="form-control" id="tagfile" name="tagfile">
            </div>
            <button type="submit" class="btn btn-primary">Upload Tags</button>
        </form>
    </div>
</div>

<form method="POST" class="p-3 border rounded mb-4">
    <input type="hidden" name="listtags" value="1">
    <button type="submit" class="btn btn-secondary">List All Tags</button>
</form>

<div class="d-flex gap-2 mb-4">
    <form method="POST" class="p-3 border rounded">
        <input type="hidden" name="listtags" value="1">
        <button type="submit" class="btn btn-secondary">List All Tags</button>
    </form>
    
    <form method="POST" class="p-3 border rounded">
        <input type="hidden" name="exporttags" value="1">
        <button type="submit" class="btn btn-info">Export Tags CSV</button>
    </form>
</div>

