{{#showtags}}
<div class="mt-5">
    <h3>All Tags in Default Collection</h3>
    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr><th>Tag Name</th><th>Tag ID</th><th>Description</th><th>Tagged Items</th><th>Action</th></tr>
        </thead>
        <tbody>
            {{#tags}}
            <tr>
                <td>{{name}}</td>
                <td>{{id}}</td>
                <td>{{description}}</td>
                <td>{{instancecount}}</td>
                <td>
                    {{#candel}}
                    <form method="POST" style="display:inline;">
                        <input type="hidden" name="deletetag" value="1">
                        <input type="hidden" name="tagid" value="{{id}}">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this tag?')">Delete</button>
                    </form>
                    {{/candel}}
                    {{^candel}}-{{/candel}}
                </td>
            </tr>
            {{/tags}}
        </tbody>
    </table>
</div>
{{/showtags}}